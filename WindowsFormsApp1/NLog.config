<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true" throwExceptions="false"
      internalLogLevel="Warn" internalLogFile="C:\Logs\AppLogs\nlog-internal.log">

  <!--
    IMPORTANT: You must register the extension assembly so NLog knows
    what 'ecs-layout' means.
  -->
  <extensions>
    <add assembly="Elastic.CommonSchema.NLog"/>
    <!-- Still needed for ${windows-sessionid} -->
  </extensions>

  <targets async="true">
    <target name="jsonFile" xsi:type="AsyncWrapper" queueLimit="10000" overflowAction="Discard">
      <target xsi:type="File"
              fileName="C:\Logs\AppLogs\User-${windows-identity:domain=false}\${windows-session}-${shortdate}.log"
              archiveAboveSize="10485760" archiveNumbering="Rolling" maxArchiveFiles="5"
              keepFileOpen="true" openFileCacheTimeout="30">

        <!--
          The entire manual JSON layout is replaced by this single, clean tag.
          It automatically handles mapping standard fields to ECS format.
        -->
        <layout xsi:type="ecs-layout">
          <!--
            The ECS layout automatically includes MDLC and event properties.
            We can still add custom attributes for data that doesn't cleanly fit
            into the ECS standard or requires a specific layout renderer.
          -->
          <attribute name="win.session.id" layout="${windows-sessionid}" />

          <!--
            Our MDLC context (appName, appType, sessionCorrelationId) and
            event properties (transactionId, customerId, vbCodeFile, etc.)
            will be automatically included under a 'labels' or 'meta' field.
          -->
        </layout>

      </target>
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Debug" writeTo="jsonFile" />
  </rules>
</nlog>